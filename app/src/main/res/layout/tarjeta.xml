<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout5">

        <com.parse.ParseImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_foto"
            android:src="@drawable/no_perfil"
            android:scaleType="fitXY" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="420dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Nombre"
            android:textColor="#ffffff"
            android:background="#1da6a6a6"
            android:textStyle="bold"
            android:textSize="24dp"
            android:id="@+id/tv_nombre"
            android:digits="50"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="#2bbbbbbb"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:text="Empresa"
                android:id="@+id/tv_empresa"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#067999"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp" />
            <TextView
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:text="Empresa"
                android:id="@+id/tv_cargo"
                android:textSize="16dp"
                android:textColor="#2fd4ff"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:weightSum="1"
                android:layout_marginTop="8dp" >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:id="@+id/imageView12"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:src="@mipmap/ic_communication_phone"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="16dp"
                        android:id="@+id/tv_telefono"
                        android:layout_weight="0.23"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Movil"
                        android:textSize="12dp"
                        android:textColor="#2fd4ff"
                        android:id="@+id/textView14"
                        android:layout_weight="0.54" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:background="#ffffff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/linearLayout6"
                android:weightSum="1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Tweet"
                    android:id="@+id/tweet"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginTop="8dp"
                    android:digits="140" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="0dp"
                        android:weightSum="1" >

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView13"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:src="@mipmap/ic_maps_local_post_office"
                                android:scaleType="fitCenter" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="132dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1"
                                android:layout_weight="1.24" >

                                <TextView
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="New Text"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_correo"
                                    android:layout_marginTop="12dp" />

                                <TextView
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Correo"
                                    android:textSize="12dp"
                                    android:textColor="#2fd4ff"
                                    android:id="@+id/textView17"
                                    android:layout_weight="0.54" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/imageView14"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:src="@mipmap/ic_action_home"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="132dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1"
                                android:layout_weight="1.24" >

                                <TextView
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="New Text"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_direccion"
                                    android:layout_marginTop="12dp" />

                                <TextView
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Direccion"
                                    android:textSize="12dp"
                                    android:textColor="#2fd4ff"
                                    android:id="@+id/textView19"
                                    android:layout_weight="0.54" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="2dp" >

                            <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/locacion"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:src="@mipmap/ic_maps_place"
                                android:scaleType="centerCrop" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="132dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1"
                                android:layout_weight="1.24" >

                                <TextView
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:textSize="16dp"
                                    android:id="@+id/tv_ubicacion"
                                    android:layout_marginTop="12dp" />

                                <TextView
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicacion"
                                    android:textSize="12dp"
                                    android:textColor="#2fd4ff"
                                    android:id="@+id/tv_ciudad"
                                    android:layout_weight="0.54" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="20dp"
                        android:transitionGroup="false">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Logo empresa"
                            android:textStyle="bold"
                            android:textColor="#067999"
                            android:id="@+id/textView" />

                        <com.parse.ParseImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/iv_logo"
                            android:layout_gravity="center"
                            android:layout_marginRight="0dp"
                            android:layout_marginTop="16dp"
                            android:scaleType="centerCrop" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#fff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/logolargo"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>