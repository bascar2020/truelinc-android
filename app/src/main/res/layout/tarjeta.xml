<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="236dp"
        android:weightSum="1"
        android:layout_gravity="center_horizontal"
        android:id="@+id/linearLayout5">

        <com.parse.ParseImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_foto"
            android:src="@drawable/no_perfil"
            android:scaleType="centerCrop" />

          <TextView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="Nombre"
            android:textColor="#ffffff"

            android:background="#c8676d70"
            android:textSize="24dp"
            android:id="@+id/tv_nombre"
            android:digits="50"

            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
              android:layout_marginBottom="10dp"
            android:gravity="center"
            android:inputType="textCapWords"
            android:capitalize="sentences" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_logo"
            android:layout_gravity="center"
            android:src="@drawable/nologo"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:background="@drawable/city">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.98">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Empresa"
                        android:id="@+id/tv_empresa"
                        android:textSize="17dp"
                        android:textColor="#fff"
                        android:layout_marginLeft="16dp"
                        android:inputType="textCapWords"
                        android:capitalize="sentences"
                        android:layout_marginTop="4dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Cargo"
                        android:id="@+id/tv_cargo"
                        android:textSize="13dp"
                        android:textColor="#fff"
                        android:inputType="textCapWords|textCapSentences|textCapCharacters"
                        android:layout_marginLeft="16dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_face"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/face"
                    android:nestedScrollingEnabled="false"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/btn_tweet"
                    android:layout_marginRight="8dp"
                    android:clickable="true"
                    android:longClickable="false"
                    android:layout_marginTop="2dp" />


                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/btn_tweet"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/tweet"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="16dp"
                    android:clickable="true"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="2dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:weightSum="1"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:background="#01579b">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView12"
                        android:src="@mipmap/ic_maps_local_phone"
                        android:scaleType="fitXY"
                        android:layout_gravity="center" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:weightSum="1" >

                    <TextView
                        android:layout_width="191dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="16dp"
                        android:id="@+id/tv_telefono"
                        android:layout_weight="0.23"
                        android:layout_marginTop="12dp"
                        android:autoLink="phone"
                        android:textColor="#01579b"
                        android:textColorLink="#01579b"
                        android:textColorHint="#01579b"
                        android:textColorHighlight="#01579b" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="M贸vil"
                        android:textSize="12dp"
                        android:textColor="#3191ff"
                        android:id="@+id/textView14"
                        android:layout_weight="0.54" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:background="#fff">

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="#01579b">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:id="@+id/imageView13"
                        android:src="@mipmap/ic_maps_local_post_office"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="5dp" />
                </FrameLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="132dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:weightSum="1"
                    android:layout_weight="1.24" >

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="New Text"
                        android:textSize="16dp"
                        android:id="@+id/tv_correo"
                        android:layout_marginTop="12dp"
                        android:autoLink="email"
                        android:inputType="textEmailAddress"
                        android:textColor="#01579b"
                        android:textColorHighlight="#01579b"
                        android:textColorHint="#01579b"
                        android:textColorLink="#01579b" />

                    <TextView
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:text="Correo"
                        android:textSize="12dp"
                        android:textColor="#3191ff"
                        android:id="@+id/textView17"
                        android:layout_weight="0.54" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tweet"
                    android:id="@+id/textView2"
                    android:textSize="20dp"
                    android:textColor="#01579b"
                    android:layout_marginLeft="12dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="52dp"
                    android:text="Tweet"
                    android:id="@+id/tv_twit"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="1dp"
                    android:digits="140"
                    android:textSize="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="2dp"
                    android:textColor="#3191ff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/linearLayout6"
                android:weightSum="1"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="2dp"
                            android:background="#ffffff">
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#01579b">>
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/imageView14"
                                    android:src="@mipmap/ic_action_home"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp" />
                            </FrameLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="132dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1"
                                android:layout_weight="1.24" >

                                <TextView
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="New Text"
                                    android:textSize="12dp"
                                    android:id="@+id/tv_direccion"
                                    android:layout_marginTop="12dp"
                                    android:textColor="#01579b" />

                                <TextView
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Direcci贸n"
                                    android:textSize="10dp"
                                    android:textColor="#3191ff"
                                    android:id="@+id/textView19"
                                    android:layout_weight="0.54" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="58dp"
                            android:layout_marginRight="1dp"
                            android:layout_marginTop="4dp"
                            android:background="#fff">
                            <FrameLayout
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:background="#01579b">>
                                <ImageView
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:id="@+id/locacion"
                                    android:src="@mipmap/ic_maps_place"
                                    android:scaleType="centerCrop"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="5dp" />
                            </FrameLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="132dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:weightSum="1"
                                android:layout_weight="1.24" >

                                <TextView
                                    android:layout_width="122dp"
                                    android:layout_height="wrap_content"
                                    android:text="New Text"
                                    android:textSize="12dp"
                                    android:id="@+id/tv_ciudad"
                                    android:layout_marginTop="12dp"
                                    android:textColor="#01579b" />

                                <TextView
                                    android:layout_width="135dp"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicaci贸n"
                                    android:textSize="10dp"
                                    android:textColor="#3191ff"
                                    android:layout_weight="0.54" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:transitionGroup="false"
                        android:background="#ffffff"
                        android:weightSum="1"
                        android:baselineAligned="false"
                        android:layout_marginLeft="10dp">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:background="#01579b"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="C贸digo Qr"
                                android:textColor="#fff"
                                android:id="@+id/textView"
                                android:gravity="center"
                                android:layout_marginLeft="12dp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:id="@+id/iv_qr"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="2dp"
                            android:clickable="true"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/btn_mas"
                    android:background="#fff"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#fff">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView8"
                    android:src="@drawable/logolargo"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:scaleType="centerInside"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>